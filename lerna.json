{
  "packages": ["packages/*"],
  "version": "0.2.2",
  "npmClient": "pnpm",
  "command": {
    "publish": {
      "allowBranch": ["main", "master"],
      "conventionalCommits": true,
      "gitRemote": "origin",
      "message": "chore(release): %s"
    }
  },
  "useWorkspaces": true,
  "forceLocal": true,
  "sort": true,
  "stream": true
}
